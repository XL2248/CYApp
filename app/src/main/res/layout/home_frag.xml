<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/gary"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v4.view.ViewPager
                    android:focusableInTouchMode="true"
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"></android.support.v4.view.ViewPager>
                <LinearLayout
                    android:id="@+id/line_edit"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/edit_shape"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp">
                    <EditText
                        android:cursorVisible="false"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:textSize="14sp"
                        android:hint="酒店/美食/景点/娱乐"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_marginRight="20dp"
                        android:padding="8dp"
                        android:scaleType="fitStart"
                        android:src="@mipmap/search"
                        android:layout_width="36dp"
                        android:layout_height="36dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="100dp"
                    android:layout_below="@+id/line_edit"
                    android:id="@+id/line_point"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/viewpager"
                    android:orientation="vertical"
                    android:padding="5dp" >
                    <LinearLayout
                        android:id="@+id/points"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal" >
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="116dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/line_edit"
                    android:id="@+id/line_m1"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/card_r"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:paddingRight="6dp"
                        android:paddingLeft="6dp"
                        android:paddingBottom="6dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:padding="4dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:adjustViewBounds="true"
                                android:padding="10dp"
                                android:scaleType="fitCenter"
                                android:src="@mipmap/home01"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_gravity="center_horizontal"
                                android:text="冬奥"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:padding="4dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:adjustViewBounds="true"
                                android:padding="10dp"
                                android:scaleType="fitCenter"
                                android:src="@mipmap/home02"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_gravity="center_horizontal"
                                android:text="景点"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:padding="4dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:adjustViewBounds="true"
                                android:padding="10dp"
                                android:scaleType="fitCenter"
                                android:src="@mipmap/home03"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_gravity="center_horizontal"
                                android:text="酒店"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:padding="4dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:adjustViewBounds="true"
                                android:padding="10dp"
                                android:scaleType="fitCenter"
                                android:src="@mipmap/home04"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_gravity="center_horizontal"
                                android:text="美食"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:padding="4dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:adjustViewBounds="true"
                                android:padding="12dp"
                                android:scaleType="fitCenter"
                                android:src="@mipmap/home05"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_gravity="center_horizontal"
                                android:text="休闲"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:paddingRight="6dp"
                        android:paddingLeft="6dp"
                        android:paddingBottom="6dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:padding="4dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:adjustViewBounds="true"
                                android:padding="11dp"
                                android:scaleType="fitCenter"
                                android:src="@mipmap/home06"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_gravity="center_horizontal"
                                android:text="攻略"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:padding="4dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:adjustViewBounds="true"
                                android:padding="10dp"
                                android:scaleType="fitCenter"
                                android:src="@mipmap/home07"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_gravity="center_horizontal"
                                android:text="公交"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:padding="4dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:adjustViewBounds="true"
                                android:padding="13dp"
                                android:scaleType="fitCenter"
                                android:src="@mipmap/home08"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_gravity="center_horizontal"
                                android:text="地图"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:padding="4dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:adjustViewBounds="true"
                                android:padding="10dp"
                                android:scaleType="fitCenter"
                                android:src="@mipmap/home09"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_gravity="center_horizontal"
                                android:text="天气"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:padding="4dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:adjustViewBounds="true"
                                android:padding="12dp"
                                android:scaleType="fitCenter"
                                android:src="@mipmap/home10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_gravity="center_horizontal"
                                android:text="新闻"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/line_m2"
                    android:layout_below="@+id/line_m1"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/card_r"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:padding="5dp"
                        android:textSize="12sp"
                        android:text="- 人气推荐 -"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </RelativeLayout>



    </ScrollView>

</LinearLayout>