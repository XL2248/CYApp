<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@mipmap/login_bg"
    android:layout_height="match_parent">
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="登 录"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:background="@drawable/login_bor_1"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/login_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:background="@drawable/login_bor_2"
            android:orientation="vertical"

            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@drawable/login_bor_n_p"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:padding="8dp"
                    android:src="@mipmap/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:textSize="16sp"
                    android:textColorHint="@color/z_gary"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:id="@+id/login_et_name"
                    android:textCursorDrawable="@color/z_gary"
                    android:layout_weight="1"
                    android:hint="昵称"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:padding="6dp"
                    android:src="@mipmap/password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:password="true"
                    android:textColorHint="@color/z_gary"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:id="@+id/login_et_password"
                    android:layout_weight="1"
                    android:hint="密码"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>



        </LinearLayout>
        <Button
            android:id="@+id/login_bt_l"
            android:background="@drawable/login_bor_lb"
            android:layout_marginTop="20dp"
            android:layout_marginRight="28dp"
            android:layout_marginLeft="28dp"
            android:textColor="@color/white"
            android:text="登录"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/login_bt_r"
            android:background="@drawable/login_bor_rb"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:text="注册新用户"
            android:layout_marginRight="28dp"
            android:layout_marginLeft="28dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="16sp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/gary"
            android:layout_marginTop="36dp"
            android:layout_gravity="center_horizontal"
            android:text="- 第三方账号登录 -"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/qq"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <ImageView
                android:padding="4dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/wx"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <ImageView
                android:layout_marginLeft="10dp"
                android:src="@mipmap/wb"
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>