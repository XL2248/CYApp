<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/gary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/gary"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/blue"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingTop="40dp"
            android:paddingBottom="40dp"
            android:paddingLeft="40dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.example.fs.cy_demo.customer.CircleImageView
                android:src="@drawable/head"
                app:border_width="2dp"
                app:border_color="@color/white"
                android:layout_width="60dp"
                android:layout_height="60dp" />
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"
                    android:id="@+id/per_state"
                    android:paddingLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white"
                    android:text="登陆/注册 >"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/per_tv_sign"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:visibility="invisible"
                    android:paddingTop="8dp"
                    android:paddingLeft="20dp"
                    android:text="签名"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="12sp"
                android:gravity="center"
                android:background="@drawable/per_w_r"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="发帖： 0"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="12sp"
                android:gravity="center"
                android:background="@drawable/per_w_r"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="收藏： 0"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="12sp"
                android:gravity="center"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="积分： 0"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingBottom="8dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="12dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="6dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"
                android:src="@mipmap/per_k1_g"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
            <TextView
                android:textSize="12sp"
                android:layout_gravity="center_horizontal"
                android:text="待付款"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="12dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="6dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"
                android:src="@mipmap/per_k2_g"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
            <TextView
                android:textSize="12sp"
                android:layout_gravity="center_horizontal"
                android:text="浏览足迹"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="12dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="6dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"
                android:src="@mipmap/per_k3_g"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
            <TextView
                android:textSize="12sp"
                android:layout_gravity="center_horizontal"
                android:text="我的订单"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="12dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="6dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"
                android:src="@mipmap/per_k4_g"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
            <TextView
                android:textSize="12sp"
                android:layout_gravity="center_horizontal"
                android:text="待评价"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@drawable/per_bor_separate"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/per_iv_collect"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/per_collect"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:layout_toRightOf="@+id/per_iv_collect"
                android:layout_centerVertical="true"
                android:text="我的收藏"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@mipmap/right"
                android:padding="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/per_bor_separate"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/per_iv_travel"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/per_travel"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:layout_toRightOf="@+id/per_iv_travel"
                android:layout_centerVertical="true"
                android:text="我的游记"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@mipmap/right"
                android:padding="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/per_bor_separate"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/per_iv_help"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/per_help"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:layout_toRightOf="@+id/per_iv_help"
                android:layout_centerVertical="true"
                android:text="我的求助"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@mipmap/right"
                android:padding="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/per_iv_message"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/per_message"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:layout_toRightOf="@+id/per_iv_message"
                android:layout_centerVertical="true"
                android:text="我的消息"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@mipmap/right"
                android:padding="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@drawable/per_bor_separate"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/per_iv_detail"
                android:padding="8dp"
                android:src="@mipmap/per_detail"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:layout_toRightOf="@+id/per_iv_detail"
                android:layout_centerVertical="true"
                android:text="编辑个人资料"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@mipmap/right"
                android:padding="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/per_iv_exitlogin"
                android:padding="8dp"
                android:src="@mipmap/per_detail"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:layout_toRightOf="@+id/per_iv_exitlogin"
                android:layout_centerVertical="true"
                android:text="退出登录"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@mipmap/right"
                android:padding="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="12dp"
        android:background="@color/white"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/per_iv_emailus"
                android:padding="8dp"
                android:src="@mipmap/per_emailus"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:layout_toRightOf="@+id/per_iv_emailus"
                android:layout_centerVertical="true"
                android:text="联系我们"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@mipmap/right"
                android:padding="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </RelativeLayout>

    </LinearLayout>

    </LinearLayout>
    </ScrollView>

</LinearLayout>